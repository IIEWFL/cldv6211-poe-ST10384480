@model IEnumerable<EventVenueBookingSystem.Models.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by Username..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (ViewBag.NotFound != null)
{
    <div class="alert alert-warning">@ViewBag.NotFound</div>
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Event Type</th>
            <th>Booking Date</th>
            <th>Time Slot</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.EventName</td>
                <td>@item.VenueName</td>
                <td>@item.EventType</td>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>@item.TimeSlot</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>