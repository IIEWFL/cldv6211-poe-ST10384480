@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to EventEase Booking System</h1>
    <p class="lead mt-4">Your streamlined solution for managing venues, events, and bookings with ease.</p>

    <hr class="my-4" />

    <div class="row justify-content-center mt-5">
        <div class="col-md-3">
            <a class="btn btn-outline-primary btn-lg w-100 mb-3" asp-controller="Booking" asp-action="Index">
                Manage Bookings
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-success btn-lg w-100 mb-3" asp-controller="Event" asp-action="Index">
                View Events
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-secondary btn-lg w-100 mb-3" asp-controller="Venue" asp-action="Index">
                Explore Venues
            </a>
        </div>
    </div>

    <div class="mt-5 text-muted">
        <p>Need help? Contact support or view documentation for more info.</p>
    </div>
</div>