@model EventVenueBookingSystem.Models.Venue
@{
    ViewData["Title"] = "Venue Details";
}
<h2>@Model.Name</h2>

<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Capacity:</strong> @Model.Capacity</p>
<p><strong>Availability:</strong> @(Model.IsAvailable ? "Available" : "Unavailable")</p>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 300px;" />
}